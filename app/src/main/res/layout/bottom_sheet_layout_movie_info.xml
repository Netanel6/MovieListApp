<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/bottom_sheet_color"
    android:gravity="center|top"
    android:orientation="horizontal"
    android:weightSum="2"
    app:behavior_hideable="true"
    android:layout_margin="1dp"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_bottom_sheet_image"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_margin="16dp"
            android:background="@drawable/ic_launcher_foreground"
            android:elevation="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:elevation="6dp"
            android:id="@+id/movie_title_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:text="Movie Title Here"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/movie_release_year_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:text="2014"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/movie_genre_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:text="Action, Comedy, Sci-Fi"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/movie_rating_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:text="8.3"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>